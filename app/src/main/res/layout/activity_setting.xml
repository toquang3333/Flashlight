            android:layout_width="92dp"
            android:layout_height="20dp"
            android:text="Introduce"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="55dp"
            android:textStyle="bold"
            android:textColor="#292D32"/>

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="127dp"
            android:background="@drawable/global" />
        <TextView
            android:layout_width="92dp"
            android:layout_height="20dp"
            android:text="Languge"
            android:layout_marginTop="128dp"
            android:layout_marginLeft="55dp"
            android:textStyle="bold"
            android:textColor="#292D32"/>
        <TextView
            android:layout_width="92dp"
            android:layout_height="20dp"
            android:text="English"
            android:layout_marginTop="128dp"
            android:layout_marginLeft="260dp"

            android:textColor="#7879F1"/>
    </RelativeLayout>
    <TextView
        android:layout_width="42dp"
        android:layout_height="20dp"
        android:text="More"
        android:textStyle="bold"
        android:textColor="#292D32"
        android:layout_marginTop="324dp"
        android:layout_marginLeft="18dp"
        android:textSize="18dp"/>
    <RelativeLayout
        android:layout_width="328dp"
        android:layout_height="165dp"
        android:background="@drawable/bodermorsecode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="359dp"
        >
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/magicstar"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="17dp"
            />
        <TextView
            android:layout_width="92dp"
            android:layout_height="20dp"
            android:text="Rate"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="55dp"
            android:textStyle="bold"
            android:textColor="#292D32"/>


        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/archivebook"
            android:layout_marginTop="59dp"
            android:layout_marginLeft="17dp"
            />
