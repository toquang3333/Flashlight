        <TextView
            android:layout_width="92dp"
            android:layout_height="20dp"
            android:text="Automatic on"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="55dp"
            android:textStyle="bold"
            android:textColor="#292D32"/>
        <TextView
            android:layout_width="203dp"
            android:layout_height="17dp"
            android:text="Turn on the flashlight on startup"
            android:layout_marginTop="39dp"
            android:layout_marginLeft="55dp"
            android:textColor="#B7AFAF"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/scCall"
            android:layout_width="39dp"
            android:layout_height="19dp"
            android:layout_marginLeft="260dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="28dp"
            android:checked="true"
            android:elevation="2dp"
            android:thumb="@drawable/handlecontainer"
            app:track="@drawable/boderclick" />
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/outlined"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="17dp"
